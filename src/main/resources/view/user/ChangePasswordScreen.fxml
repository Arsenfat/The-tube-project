<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane" prefHeight="435.0" prefWidth="753.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.tubeproject.view.user.ChangePasswordScreen">
    <children>
        <Pane fx:id="topPane" prefHeight="62.0" prefWidth="772.0" style="-fx-background-color: #000000;">
            <children>
                <ImageView fx:id="imgView" fitHeight="31.0" fitWidth="102.0" layoutX="47.0" layoutY="18.0"
                           onMouseClicked="#handleButtonActionHomePage" pickOnBounds="true" preserveRatio="true">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </ImageView>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Pane>
        <Pane fx:id="bottomPane" focusTraversable="true" layoutY="428.0" prefHeight="62.0" prefWidth="772.0"
              style="-fx-background-color: #000000;">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <children>
                <JFXButton fx:id="facebookIcon" layoutX="636.0" layoutY="19.0" prefHeight="25.0" prefWidth="24.0"/>
                <JFXButton fx:id="twitterIcon" layoutX="668.0" layoutY="19.0" prefHeight="25.0" prefWidth="24.0"/>
                <JFXButton fx:id="instagramIcon" layoutX="700.0" layoutY="19.0" prefHeight="25.0" prefWidth="24.0"/>
                <JFXButton fx:id="mailIcon" layoutX="734.0" layoutY="19.0" prefHeight="25.0" prefWidth="24.0"/>
            </children>
        </Pane>
        <Label fx:id="smhLabel" layoutX="303.0" layoutY="87.0" text="Forgotten password ?" textAlignment="CENTER"
               textFill="#151928">
            <font>
                <Font name="System Bold" size="21.0"/>
            </font>
        </Label>
        <JFXButton fx:id="resetBtn" layoutX="329.0" layoutY="354.0" prefHeight="38.0" prefWidth="162.0"
                   style="-fx-background-color: #151928;" text="Reset Password" onAction="#handlePasswordReset"
                   textFill="#dad1d1">
            <font>
                <Font size="16.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXButton>
        <JFXTextField fx:id="txtEmail" alignment="TOP_LEFT" focusColor="#744b4a" layoutX="268.0" layoutY="129.0"
                      prefHeight="31.0" prefWidth="282.0" promptText="Email"
                      style="-fx-text-inner-color: #151928; -fx-prompt-text-fill: #151928;" unFocusColor="#151928">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <font>
                <Font size="21.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXTextField>
        <JFXPasswordField fx:id="pwdPassword" focusColor="#744b4a" layoutX="269.0" layoutY="199.0" prefHeight="26.0"
                          prefWidth="282.0" promptText="New password"
                          style="-fx-prompt-text-fill: #151928; -fx-text-inner-color: #151928;" unFocusColor="#151928">
            <font>
                <Font size="21.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXPasswordField>
        <JFXPasswordField fx:id="pwdConfirm" focusColor="#744b4a" layoutX="269.0" layoutY="266.0" prefHeight="26.0"
                          prefWidth="282.0" promptText="Confirm password"
                          style="-fx-prompt-text-fill: #151928; -fx-text-inner-color: #151928;" unFocusColor="#151928">
            <font>
                <Font size="21.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXPasswordField>
        <Label fx:id="lblEmail" layoutX="582.0" layoutY="149.0" text="Wrong email" textFill="RED" visible="false"/>
        <Label fx:id="lblPassword" layoutX="582.0" layoutY="219.0" text="Passwords don't match" textFill="RED"
               visible="false"/>
    </children>
</AnchorPane>
